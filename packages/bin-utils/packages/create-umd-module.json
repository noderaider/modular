{
  "main": "lib/index.js",
  "browser": "dist/bundle.js",
  "files": [
    "lib",
    "dist"
  ],
  "scripts": {
    "start": "run-p \"build:* --silent -- --watch\"",
    "build": "run-p build:* --silent",
    "prebuild": "rimraf lib dist",
    "build:dist": "rollup -c --sourcemap inline --environment NODE_ENV:production",
    "build:lib": "babel src -d lib --ignore __tests__,__mocks__",
    "preversion": "npm run build"
  },
  "devDependencies": {
    "bin-utils": "latest",
    "babel-cli": "latest",
    "babel-core": "latest",
    "babel-eslint": "latest",
    "babel-plugin-external-helpers": "^6.18.0",
    "babel-plugin-transform-runtime": "latest",
    "babel-polyfill": "latest",
    "babel-preset-es2015": "latest",
    "babel-preset-stage-2": "latest",
    "babelrc-rollup": "^3.0.0",
    "eslint": "latest",
    "eslint-plugin-babel": "latest",
    "eslint-plugin-react": "latest",
    "ncp": "latest",
    "npm-run-all": "latest",
    "rimraf": "latest",
    "rollup": "latest",
    "rollup-plugin-babel": "latest",
    "rollup-watch": "latest"
  }
}
